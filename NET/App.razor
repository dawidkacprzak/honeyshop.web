@inject honeyshop.web.Core.Service.UserStateService uss
@implements IDisposable
@using honeyshop.web.Shared;
@if (!sessionErrored)
{
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)"/>
            <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
}
else
{
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <PageTitle>Error</PageTitle>
            <GeneralError ErrorMessage="Błąd sesji - spróbuj ponownie później." DetailedError="@detailedException"></GeneralError>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
}


@code {
    private CancellationTokenSource cts = new CancellationTokenSource();
    private bool sessionErrored = false;
    private string detailedException = "";

    public void Dispose()
    {
        cts.Cancel();
        cts.Dispose();
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await uss.InitializeSession(cts.Token);
        }
        catch (Exception ex)
        {
            detailedException = ex.Message;
            sessionErrored = true;
        }
        finally
        {
            StateHasChanged();
        }
    }

}